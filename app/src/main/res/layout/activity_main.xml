<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity"
    android:background="@color/vainilla">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/millonaire">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="290dp"
                android:layout_height="100dp"
                android:background="@color/teal_700"
                android:gravity="center"
                android:padding="10dp"
                android:text="Preguntas Millonarias"
                android:textColor="@color/black"
                android:textSize="25sp"></TextView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/black"
                android:text="Nombre: "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNN"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=""
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="Puntaje: "
                android:textColor="@color/black"
                android:backgroundTint="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvPuntaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnUno"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:text="¿1?" />

            <Button
                android:id="@+id/btnDos"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿2?" />

            <Button
                android:id="@+id/btnTres"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿3?" />

            <Button
                android:id="@+id/btnCuatro"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿4?" />

            <Button
                android:id="@+id/btnCinco"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿5?" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSeis"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:text="¿6?" />

            <Button
                android:id="@+id/btnSiete"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿7?" />

            <Button
                android:id="@+id/btnOcho"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿8?" />

            <Button
                android:id="@+id/btnNueve"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿9?" />

            <Button
                android:id="@+id/btnDiez"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿10?" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOnce"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:text="¿11?" />

            <Button
                android:id="@+id/btnDoce"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿12?" />

            <Button
                android:id="@+id/btnTrece"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿13?" />

            <Button
                android:id="@+id/btnCatorce"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿14?" />

            <Button
                android:id="@+id/btnQuince"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿15?" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDieciseis"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:text="¿16?" />

            <Button
                android:id="@+id/btnDieciSiete"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿17?" />

            <Button
                android:id="@+id/btnDieciOcho"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿18?" />

            <Button
                android:id="@+id/btnDieciNueve"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿19?" />

            <Button
                android:id="@+id/btnVeinte"
                android:layout_width="67dp"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:text="¿20?" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/black"
            android:text="Preguntas:"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <Button
            android:id="@+id/btnR1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/verde"
            android:text="Opcion #1"
            android:textColor="@color/white"></Button>

        <Button
            android:id="@+id/btnR2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/verde"
            android:text="Opcion #2"
            android:textColor="@color/white"></Button>

        <Button
            android:id="@+id/btnR3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/verde"
            android:text="Opcion #3"
            android:textColor="@color/white">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnVolverMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:text="Volver al menú"/>
    </LinearLayout>


</LinearLayout>